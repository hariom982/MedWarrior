<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.ui.home.fitnessact">

    <ImageView
        android:id="@+id/senddetails"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/play"
        app:srcCompat="@drawable/baseline_send_24" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="189dp"
        android:layout_height="38dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="169dp"
        android:text="Let's Take a"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:text="&quot;Walk&quot;"
        android:textColor="#F30303"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />

    <LinearLayout
        android:id="@+id/distancelayout"
        android:layout_width="384dp"
        android:layout_height="61dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#0B0808"
        tools:layout_editor_absoluteY="335dp" >

        <ImageView
            android:layout_width="49dp"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/distance" />

        <TextView
            android:id="@+id/distancetextview"
            android:layout_width="218dp"
            android:layout_height="47dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/durationlayout"
        android:layout_width="384dp"
        android:layout_height="61dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distancelayout"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0B0808"
        tools:layout_editor_absoluteY="409dp">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/duration" />
        <TextView
            android:id="@+id/durationtextview"
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/play"
        android:layout_width="95dp"
        android:layout_height="86dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_play_circle_filled_24" />

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="61dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#0B0808"
        app:layout_constraintVertical_bias="0.731">
        <ImageView
            android:layout_width="49dp"
            android:layout_height="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/pedometer"/>
        <TextView
            android:id="@+id/steptextview"
            android:layout_width="218dp"
            android:layout_height="47dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="2dp"
        android:layout_height="18dp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="651dp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Send to doctor"
        android:background="@null"
        android:textColor="#EBE7E7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

</androidx.constraintlayout.widget.ConstraintLayout>